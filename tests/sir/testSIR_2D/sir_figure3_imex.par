!====================================================
! Project : SIR
!=====================================================

 &filelist
        base_filename='output/sir_figure3_imex_lotfi'
    	convert_type='vtuBCCmpi'
        autoconvert=T
 /

 &savelist
        dtsave_log=0.1d0
        dtsave_dat=0.25d0
        itsave(1,2)=0
 /

        it_max=2
 &stoplist
        time_max=100.d0
 /

 &methodlist
        time_stepper = 'twostep'
        time_integrator = 'IMEX_Trapezoidal'
        flux_scheme = 20*'source'
 /

 &boundlist
        typeboundary_min1=3*'cont'
        typeboundary_max1=3*'cont'
        typeboundary_min2=3*'cont'
        typeboundary_max2=3*'cont'
 /

 &meshlist
        refine_max_level=1
        refine_threshold=20*0.1d0
        block_nx1=16
        block_nx2=16
        domain_nx1=128
        domain_nx2=128
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
        iprob=2
 /

 &paramlist
       courantpar=0.4d0
       dtdiffpar=10.0d0
       typecourant='minimum'
 /

 &sir_list
       D1 = 0.1d0
       D2 = 0.5d0
       D3 = 0.01d0
       sir_Lambda=0.5d0
       sir_d=0.1d0
       sir_mu=0.1d0
       sir_r=0.5d0
       sir_beta=0.6d0
       sir_alfa1=0.1d0
       sir_alfa2=0.02d0
       sir_alfa3=0.03d0
 /
